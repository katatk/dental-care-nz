{% extends 'template.twig' %}

{% block content %}
    <div class="container main-content">
        {% if page.contentTitle != '' %}
            <h1>{{ page.contentTitle|raw }}</h1>
        {% endif %}
        <div class="row first-row mb-8">
            <div class="col-12 col-lg-6 mb-8 mb-lg-0">
                {{ page.content|raw }}
                <span class="text-bold">Tel:</span>
                <a href="tel:{{ config.getPhoneDigits() }}">{{ config.phone }}</a><br>
                <span class="text-bold">Email:</span>
                <a href="mailto:{{ config.email }}">{{ config.email }}</a><br>
                <span> {{ config.address }} </span>
            </div>

            <div class="col-12 col-lg-6 mb-8 mb-lg-0">
               {# <h3>{{ contactForm.name }}</h3>#}
                {{ contactForm.outputForm()|raw }}
            </div>
        </div>

       {# <div class="row">
            <div class="col-12 col-lg-4">

            </div>

            <div class="col-12 col-lg-5">
                <p class="mb-0">

                </p>
            </div>
        </div>#}

        <div class="map">
            {{ config.getMap()|raw }}
        </div>

    </div>

{% endblock %}
